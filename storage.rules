rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les images de chambres
    match /rooms/{imageId} {
      // Permettre la lecture à tous
      allow read: if true;
      // Permettre l'écriture uniquement aux utilisateurs authentifiés
      allow write: if request.auth != null;
    }
    
    // Règles pour les images du restaurant
    match /restaurant/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Règles pour les images du bar
    match /bar/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Règles pour les autres fichiers
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
